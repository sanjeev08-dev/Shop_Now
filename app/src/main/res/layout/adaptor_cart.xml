<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/productCartCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:strokeColor="@color/black"
    app:strokeWidth="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/productCartImage"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/clothpic"
            app:riv_corner_radius="@dimen/_5sdp"
            app:riv_border_width="@dimen/_2sdp"
            app:riv_border_color="@color/black"/>
        <TextView
            android:id="@+id/productCartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/productCartImage"
            android:text="Sanjeev Kumar"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="@dimen/_12ssp"/>
        <TextView
            android:id="@+id/productCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/productCartImage"
            android:text="999 Rs."
            android:textColor="@color/priceColor"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:textSize="@dimen/_12ssp"
            android:layout_below="@id/productCartName"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>