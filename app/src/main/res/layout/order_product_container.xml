<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp">
        <ImageView
            android:id="@+id/orderProductImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/clothpic"/>
        <TextView
            android:id="@+id/orderProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realme 1"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_regular"/>
        <TextView
            android:id="@+id/orderProductQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Items"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_regular"/>
        <TextView
            android:id="@+id/orderProductAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9999 Rs."
            android:textColor="@color/black"
            android:layout_margin="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_regular"/>
        <TextView
            android:id="@+id/orderProductAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meerut"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_regular"/>
        <TextView
            android:id="@+id/orderProductDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Jun 2020"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_regular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selected_color"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_3sdp"
                android:fontFamily="@font/ubuntu_regular"/>
            <RelativeLayout
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp">
                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/color_bg"
                    app:tint="@color/colorPrimary" />
                <ImageView
                    android:id="@+id/orderProductColor"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:elevation="@dimen/_6sdp"
                    android:src="@drawable/color_bg"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>